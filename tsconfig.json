{
  "compilerOptions": {
    "strict": true,
    "declaration": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "target": "esnext",
    "module": "esnext",
    "jsx": "preserve",
    "skipLibCheck": true,
    "baseUrl": "src",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "./amplify/**/*.js",
    "./amplify/**/*.cjs",
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./src/**/*.gif",
    "./src/**/*.png",
    "./src/**/*.jpg",
    "./src/**/*.jpeg",
    "./src/**/*.svg",
    "./src/**/*.json",
    "./src/**/*.css",
    "./src/**/*.mov",
    "src/utils/CreateVessels", 
    "amplify/backend/function/updateVesselsMT/models/schema.mjs", 
    "amplify/backend/function/updateVesselsMT/models/index.mjs"
  ]
}
